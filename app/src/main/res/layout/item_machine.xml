<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:paddingLeft="@dimen/x84"
        android:background="#fff">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y15"
            android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="品牌:"
            android:includeFontPadding="false"
            android:textSize="@dimen/y24"
            android:textColor="#999999"/>

            <TextView
                android:layout_marginLeft="@dimen/x10"
                android:id="@+id/itemmachine_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxxxxxxxx"
                android:includeFontPadding="false"
                android:textSize="@dimen/y24"
                android:textColor="@color/textcolor"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/y55"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SN:"
                android:includeFontPadding="false"
                android:textSize="@dimen/y24"
                android:textColor="#999999"/>

            <TextView
                android:id="@+id/itemmachine_sn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxxxxxxxx"
                android:layout_marginLeft="@dimen/x10"
                android:includeFontPadding="false"
                android:textSize="@dimen/y24"
                android:textColor="@color/textcolor"/>

        </LinearLayout>

        <TextView
            android:id="@+id/itemmachine_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="正常"
            android:textColor="#0cb563"
            android:textSize="@dimen/y22"
            android:layout_marginLeft="@dimen/x558"/>

    </RelativeLayout>

</LinearLayout>