<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    android:orientation="vertical">

    <include
        layout="@layout/tool_bar"/>

    <TextView
        android:id="@+id/machineAllInfo_amNumber_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y68"
        android:background="#f6dcae"
        android:text="商户号:"
        android:gravity="center"
        android:textColor="@color/textcolor"
        android:textSize="@dimen/y24"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y64"
        android:paddingLeft="@dimen/x30"
        android:textSize="@dimen/y24"
        android:text="已绑定终端信息"
        android:gravity="center_vertical"
        android:textColor="@color/textcolor"/>


    
    <LinearLayout
        android:id="@+id/machineAllInfo_One_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y88"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x30"
        android:background="#fff"
        android:gravity="center_vertical">
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/zdxxydpos"/>

        <TextView
            android:layout_marginLeft="@dimen/x13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textcolor"
            android:includeFontPadding="false"
            android:textSize="@dimen/y28"
            android:text="移动POS机"/>

        <ImageView
            android:id="@+id/machineAllInfo_onejiantou_img"
            android:layout_marginLeft="@dimen/x10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/jingyibuu"/>

        <TextView
            android:id="@+id/machineAllInfo_onenumber_tv"
            android:layout_marginLeft="@dimen/x382"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:includeFontPadding="false"
            android:textSize="@dimen/y28"
            android:text="0"/>

    </LinearLayout>

    <ListView
        android:visibility="gone"
        android:id="@+id/machineAllInfo_One_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">

    </ListView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/line"/>



    <LinearLayout
        android:id="@+id/machineAllInfo_Two_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y88"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x30"
        android:background="#fff"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/zdxxznpos"/>

        <TextView
            android:layout_marginLeft="@dimen/x13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textcolor"
            android:includeFontPadding="false"
            android:textSize="@dimen/y28"
            android:text="智能POS机"/>

        <ImageView
            android:id="@+id/machineAllInfo_twojiantou_img"
            android:layout_marginLeft="@dimen/x10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/jingyibuu"/>

        <TextView
            android:id="@+id/machineAllInfo_twonumber_tv"
            android:layout_marginLeft="@dimen/x382"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:includeFontPadding="false"
            android:textSize="@dimen/y28"
            android:text="0"/>

    </LinearLayout>

    <ListView
        android:visibility="gone"
        android:id="@+id/machineAllInfo_Two_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">

    </ListView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/line"/>

    <LinearLayout
        android:id="@+id/machineAllInfo_Three_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y88"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x30"
        android:background="#fff"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/zdxxypos"/>

        <TextView
            android:layout_marginLeft="@dimen/x13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textcolor"
            android:includeFontPadding="false"
            android:textSize="@dimen/y28"
            android:text="云POS机"/>

        <ImageView
            android:id="@+id/machineAllInfo_threejiantou_img"
            android:layout_marginLeft="@dimen/x10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/jingyibuu"/>

        <TextView
            android:id="@+id/machineAllInfo_threenumber_tv"
            android:layout_marginLeft="@dimen/x409"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:includeFontPadding="false"
            android:textSize="@dimen/y28"
            android:text="0"/>

    </LinearLayout>

    <ListView
        android:visibility="gone"
        android:id="@+id/machineAllInfo_Three_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">

    </ListView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/line"/>


</LinearLayout>  