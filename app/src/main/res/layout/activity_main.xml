<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/cont"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y98"
        android:background="@drawable/main"
        android:paddingTop="@dimen/y10">

        <LinearLayout
            android:id="@+id/LinearLayout_business"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_business_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/yw" />

            <TextView
                android:id="@+id/main_business_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y8"
                android:text="业务"
                android:includeFontPadding="false"
                android:textColor="#999999"
                android:textSize="@dimen/y22" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout_terminal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_terminal_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/zd" />

            <TextView
                android:id="@+id/main_terminal_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y8"
                android:text="终端"
                android:includeFontPadding="false"
                android:textColor="#999999"
                android:textSize="@dimen/y22" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_mine_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wode" />

            <TextView
                android:id="@+id/main_mine_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y8"
                android:text="我的"
                android:includeFontPadding="false"
                android:textColor="#999999"
                android:textSize="@dimen/y22" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>  