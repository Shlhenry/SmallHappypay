<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <include
        layout="@layout/tool_bar"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="#1a000000"/>

    <ImageView
        android:layout_width="@dimen/x128"
        android:layout_height="@dimen/y128"
        android:src="@mipmap/xwlogo"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y60"/>

    <LinearLayout
        android:layout_marginTop="@dimen/y120"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y44"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/x42"
            android:layout_height="@dimen/y42"
            android:src="@drawable/dlmobile"
            android:layout_marginLeft="@dimen/x49"/>

        <EditText
            android:id="@+id/register_tel_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="#fff"
            android:hint="账号/手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:paddingLeft="@dimen/x20"
            android:textColorHint="#66000000"
            android:textSize="@dimen/y28" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:layout_marginTop="@dimen/y19"
        android:background="@color/line"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"/>

    <LinearLayout
        android:layout_marginTop="@dimen/y43"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y44"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/x42"
            android:layout_height="@dimen/y42"
            android:src="@drawable/yzm"
            android:layout_marginLeft="@dimen/x49"/>

        <EditText
            android:id="@+id/register_inputcode_et"
            android:layout_width="@dimen/x300"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/x20"
            android:hint="请输入验证码"
            android:background="#fff"
            android:textColorHint="#66000000"
            android:textSize="@dimen/y28"
            android:layout_gravity="center_vertical"
            android:inputType="number" />

        <com.example.administrator.smallhappypay.tool.TimerButton
            android:id="@+id/register_getcode_btn"
            android:layout_width="@dimen/x168"
            android:layout_height="@dimen/y44"
            android:text="获取验证码"
            android:textSize="@dimen/y24"
            android:textColor="#fff"
            android:layout_marginLeft="@dimen/x100"
            android:background="@drawable/getcodebg"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:layout_marginTop="@dimen/y21"
        android:background="@color/line"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"/>

    <LinearLayout
        android:layout_marginTop="@dimen/y43"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y42"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/x42"
            android:layout_height="@dimen/y42"
            android:src="@drawable/dlcode"
            android:layout_marginLeft="@dimen/x49"/>

        <EditText
            android:id="@+id/register_pwd_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/x20"
            android:hint="设置密码，6-20位，需包含数字和字母"
            android:background="#fff"
            android:textColorHint="#66000000"
            android:textSize="@dimen/y28"
            android:layout_gravity="center_vertical"
            android:inputType="textPassword"
            android:maxLength="11"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:layout_marginTop="@dimen/y21"
        android:background="@color/line"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"/>
    <LinearLayout
        android:layout_marginTop="@dimen/y43"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y42"
        android:visibility="gone"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/x42"
            android:layout_height="@dimen/y42"
            android:src="@drawable/dlcode"
            android:layout_marginLeft="@dimen/x49"/>

        <EditText
            android:id="@+id/register_pwdagain_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/x20"
            android:hint="请重新输入密码，确保两次输入一致"
            android:background="#fff"
            android:textColorHint="#66000000"
            android:textSize="@dimen/y28"
            android:layout_gravity="center_vertical"
            android:inputType="textPassword"
            android:maxLength="11"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:visibility="gone"
        android:layout_marginTop="@dimen/y21"
        android:background="@color/line"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"/>

    <LinearLayout
        android:layout_marginTop="@dimen/y43"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y42"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/x42"
            android:layout_height="@dimen/y42"
            android:src="@drawable/shh"
            android:layout_marginLeft="@dimen/x49"/>

        <EditText
            android:id="@+id/register_recommend_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/x20"
            android:hint="请输入代理商号"
            android:background="#fff"
            android:textColorHint="#66000000"
            android:textSize="@dimen/y28"
            android:layout_gravity="center_vertical"
            android:inputType="phone"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:layout_marginTop="@dimen/y21"
        android:background="@color/line"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"/>

    <Button
        android:id="@+id/register_register_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/zcbutton"
        android:layout_marginTop="@dimen/y100"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/register_msg_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册即代表您同意网络使用协议和隐私条款"
        android:textSize="@dimen/y22"
        android:textColor="@color/textcolor"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y20"/>


</LinearLayout>  