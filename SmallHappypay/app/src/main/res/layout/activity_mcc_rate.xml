<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f1f7"
    android:orientation="vertical">

    <include
        layout="@layout/tool_bar"/>

    <TextView
        android:id="@+id/mccrate_amnumber_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y68"
        android:text="商户号:"
        android:gravity="center"
        android:background="#f6dcae"
        android:textColor="@color/textcolor"
        android:textSize="@dimen/y24"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y78"
        android:text="T1费率"
        android:textSize="@dimen/y24"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x34"/>

    <ListView
        android:id="@+id/mccrate_t_lv"
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y78"
        android:text="D0费率"
        android:textSize="@dimen/y24"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x34"/>

    <ListView
        android:id="@+id/mccrate_d_lv"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>  