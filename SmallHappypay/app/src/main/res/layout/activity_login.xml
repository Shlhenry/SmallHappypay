<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:textColor="@color/textcolor"
        android:textSize="@dimen/y100"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/y138"
        android:includeFontPadding="false"/>

    <ImageView
        android:id="@+id/login_face_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dlface"
        android:layout_marginTop="@dimen/y75"
        android:layout_gravity="center"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/y130"
        android:paddingLeft="@dimen/x59">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y86"
            android:src="@drawable/dlmobile"
            android:layout_gravity="center_vertical"/>
        
        <EditText
            android:id="@+id/login_phone_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="账号/手机号"
            android:textSize="@dimen/y28"
            android:layout_marginLeft="@dimen/x28"
            android:background="@null"
            android:inputType="phone"
            android:textColorHint="#66000000"
            android:textColor="@color/textcolor"/>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/line"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/y20"
        android:paddingLeft="@dimen/x59">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y86"
            android:src="@drawable/dlcode"
            android:layout_gravity="center_vertical"/>

        <EditText
            android:id="@+id/login_pw_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="密码"
            android:textSize="@dimen/y28"
            android:layout_marginLeft="@dimen/x28"
            android:background="@null"
            android:inputType="textPassword"
            android:textColorHint="#66000000"
            android:textColor="@color/textcolor"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/line"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"/>

    <TextView
        android:id="@+id/login_forgetpw_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码"
        android:textColor="@color/homecolor"
        android:includeFontPadding="false"
        android:layout_marginLeft="@dimen/x575"
        android:layout_marginTop="@dimen/y19"/>

    <ImageButton
        android:id="@+id/login_login_imgbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dlbuttonwdj"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y74"/>

    <ImageButton
        android:id="@+id/login_register_imgbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dzclbutton"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y40"/>


</LinearLayout>  