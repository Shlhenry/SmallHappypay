<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y66"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018年"
            android:layout_marginLeft="@dimen/x40"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/y24"/>

        <LinearLayout
            android:id="@+id/charttwo_ll"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/y30"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginLeft="@dimen/x23"
            android:background="@drawable/monthbg">

            <TextView
                android:id="@+id/chart_month_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_gravity="center_vertical"
                android:includeFontPadding="false"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/y24"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/jybbsanjiao"
                android:layout_marginLeft="@dimen/x16"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="月份交易统计"
            android:layout_marginLeft="@dimen/x10"
            android:textColor="@color/textcolor"
            android:includeFontPadding="false"
            android:textSize="@dimen/y24"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/jybbh"
            android:layout_marginLeft="@dimen/x17"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="POS机交易"
            android:layout_marginLeft="@dimen/x6"
            android:textSize="@dimen/y12"
            android:layout_gravity="center_vertical"
            android:textColor="@color/textcolor"
            android:includeFontPadding="false"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/jybbg"
            android:layout_marginLeft="@dimen/x40"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信交易"
            android:layout_marginLeft="@dimen/x6"
            android:textSize="@dimen/y12"
            android:layout_gravity="center_vertical"
            android:textColor="@color/textcolor"
            android:includeFontPadding="false"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/jybbb"
            android:layout_marginLeft="@dimen/x40"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝交易"
            android:layout_marginLeft="@dimen/x6"
            android:textSize="@dimen/y12"
            android:layout_gravity="center_vertical"
            android:textColor="@color/textcolor"
            android:includeFontPadding="false"/>

    </LinearLayout>

    <com.github.mikephil.charting.charts.BarChart
        android:layout_width="match_parent"
        android:layout_height="@dimen/y500"
        android:background="#1f221c"
        android:id="@+id/chart"/>

</LinearLayout>  